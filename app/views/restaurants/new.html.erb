<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <h1>Add a new restaurant</h1>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name, error: 'The name is mandatory' %>
        <%= f.input :address, error: 'The address is mandatory' %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: Restaurant::CATEGORIES, hint: 'Choose a category' %> 
        <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
